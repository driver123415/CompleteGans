-- Script Auto Boost
-- Boost 1 2xEggsBoost
local args = {
    [1] = {
        [1] = {
            [1] = "2xEggsBoost"
        },
        [2] = codes[4] -- Menggunakan kode keempat dari tabel codes
    }
}

game:GetService("ReplicatedStorage").dataRemoteEvent:FireServer(unpack(args))

